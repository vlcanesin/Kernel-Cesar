;------------------------------------------------------------------------------
; 				Área de Dados
;------------------------------------------------------------------------------

		org h0100

PrintTimStr:	
		mov #TIM_STRING, r5			
		add r2, r5
		mov #_putmsg, r1
		jsr r7, (_VETTAB(r1))
	
		rts r7

STRING:		dab	'Print feito pela putMSG passando do limite'
		db	0

MSG_INICIAL:	db	h0A 						; Limpa visor
		db	h0D						; Coloca o cursor na primeira posição
		dab	'Digite uma tecla para encerrar o programa'	; String intencionalmente maior
		db	0						; do que a Área Caracteres

TIM_STRING:	db	h0A 			; Limpa visor
		db	h0D			; Coloca o cursor na primeira posição
		dab 	'Fim do timer!'
		db 	0












