		; -----       app4: timer       ----- ;

		mov #MSG_INICIAL, r5			
		add r2, r5			
		mov #_putmsg, r1
		jsr r7, (_VETTAB(r1))

		mov #2000, r5			; 2000 ms (2 segundos de delay)
		mov #PrintTimStr, r4
		add r2, r4			; R4 tem o endereço da função PrintTimStr
		mov #_timer, r1
		jsr r7, (_VETTAB(r1))		; Seta o timer

		mov #_getchar, r1		; Aguarda o usuário apertar uma tecla
		jsr r7, (_VETTAB(r1))		

		
		; ********  FIM DO PROGRAMA  ******** ;

		br main				; Opção 1: loop
